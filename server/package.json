{
  "name": "bangumin-server",
  "version": "0.0.0",
  "description": "server for BangumiN",
  "author": "edward",
  "license": "MIT",
  "main": "dist/src/index.js",
  "scripts": {
    "start": "NODE_ENV=prod node dist/src/index.js",
    "start-dev": "NODE_ENV=dev concurrently -k -n tsc,js \"npm:watch-ts\" \"npm:watch-js\"",
    "start-uat": "NODE_ENV=uat node dist/src/index.js",
    "start-prod": "npm start",
    "build": "tsc",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-js": "wait-on dist/src/index.js && nodemon dist/src/index.js",
    "test": "NODE_ENV=test jest",
    "lint-fix": "tslint --fix -c tslint.json -p tsconfig.json 'src/**/*.ts'"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "celebrate": "^8.0.2",
    "connect-dynamodb": "^2.0.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "csurf": "^1.9.0",
    "dotenv": "^6.0.0",
    "dynamoose": "^0.8.7",
    "express": "^4.16.3",
    "express-async-handler": "^1.1.3",
    "express-rate-limit": "^3.2.0",
    "express-session": "^1.15.6",
    "helmet": "^3.12.1",
    "http-proxy-middleware": "^0.18.0",
    "http-status-codes": "^1.3.0",
    "joi": "^13.4.0",
    "passport": "^0.4.0",
    "passport-oauth2": "^1.4.0",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "pm2": "^3.1.3",
    "reflect-metadata": "^0.1.12",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "sequelize": "^4.38.1",
    "sequelize-typescript": "^0.6.6",
    "snakecase-keys": "^1.2.0",
    "winston": "^3.1.0",
    "winston-cloudwatch": "^2.0.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.4",
    "@types/csurf": "^1.9.35",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/express-rate-limit": "^2.9.3",
    "@types/express-session": "^1.15.10",
    "@types/helmet": "0.0.38",
    "@types/http-proxy-middleware": "^0.17.5",
    "@types/jest": "^23.3.0",
    "@types/joi": "^13.4.5",
    "@types/node": "^10.10.3",
    "@types/passport": "^0.4.6",
    "@types/passport-oauth2": "^1.4.6",
    "@types/request": "^2.47.1",
    "@types/request-promise": "^4.1.42",
    "@types/sinon": "^5.0.1",
    "concurrently": "^3.6.0",
    "jest": "^23.6.0",
    "nodemon": "^1.17.5",
    "sinon": "^6.3.4",
    "supertest": "^3.1.0",
    "ts-jest": "^23.10.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^2.9.2",
    "wait-on": "^2.1.0"
  }
}
