{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "*": [
        "./node_modules/*",
        "./src/types/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}